#!/bin/sh

if [ $(xrandr --listmonitors | grep "Monitors" | awk '{ print $2 }' ) -eq "3" ]; then
        xrandr \
        --output VIRTUAL1 --off \
        --output eDP1 --mode 1920x1080 --pos 0x424 --rotate normal \
        --output DP1 --off \
        --output HDMI2 --off \
        --output HDMI1 --off \
        --output DP1-2 --mode 1920x1080 --pos 3840x0 --rotate left \
        --output DP1-1 --primary --mode 1920x1080 --pos 1920x424 --rotate normal
fi
