#!/bin/sh

if [ $(xrandr --listmonitors | grep "Monitors" | awk '{ print $2 }' ) -eq "3" ]; then
        xrandr --output eDP-1 --mode 1920x1080 --pos 0x424 --rotate normal \
        --output DP-1 --off \
        --output HDMI-1 --off \
        --output HDMI-2 --off \
        --output DP-1-2 --mode 1920x1080 --pos 3840x0 --rotate left \
        --output DP-1-1 --primary --mode 1920x1080 --pos 1920x424 --rotate normal
fi
